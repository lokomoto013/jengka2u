<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add new product"
        android:textAlignment="center"
        android:textSize="27sp"
        android:textStyle="bold"

        >


    </TextView>

    <LinearLayout
        android:id="@+id/linear_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/slogan_category"
        >

      <ImageView
          android:id="@+id/t_shirts"
          android:layout_width="wrap_content"
          android:layout_height="80dp"
          android:src="@drawable/tshirts"
          >

      </ImageView>

        <ImageView
            android:id="@+id/sports_t_shirts"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/sports"
            >

        </ImageView>

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/female_dresses"
            >

        </ImageView>

        <ImageView
            android:id="@+id/sweather"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/sweather"
            >

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/linear_layout_2"
        >

        <ImageView
            android:id="@+id/purses"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/purses_bags"
            >

        </ImageView>

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/glasses"
            >

        </ImageView>

        <ImageView
            android:id="@+id/hats"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/hats"
            >

        </ImageView>

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:src="@drawable/shoess"
            >

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/linear_layout_3"
        >

        <ImageView
            android:id="@+id/headphones"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/headphoness"
            >

        </ImageView>

        <ImageView
            android:id="@+id/laptop"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/laptops"
            >

        </ImageView>

        <ImageView
            android:id="@+id/watches"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/watches"
            >

        </ImageView>

        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:src="@drawable/mobiles"
            >

        </ImageView>
    </LinearLayout>
    


</RelativeLayout>